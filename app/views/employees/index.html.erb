<p id="notice"><%= notice %></p>

<h2 class="col-md-offset-5 text-primary">Lista de Empleados</h2>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 table-responsive">
<table class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>Nombre y Apellido</th>
      <th>Dni</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Direccion</th>
      <th>Email</th>
      <th>Codcop</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.nombre+" "+employee.apellido %></td>
        <td><%= employee.dni %></td>
        <td><%= employee.telefono %></td>
        <td><%= employee.celular %></td>
        <td><%= employee.direccion %></td>
        <td><%= mail_to employee.email %></td>
        <td><%= employee.codCOP %></td>
        <td><%= employee.position %></td>
        <td><%= link_to 'Mostrar', employee %></td>
        <td><%= link_to 'Editar', edit_employee_path(employee) %></td>
        <td><%= link_to 'Eliminar', employee, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  </div>
<%= link_to 'Nuevo Empleado', new_employee_path %>
</div>