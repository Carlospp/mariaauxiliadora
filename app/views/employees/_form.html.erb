<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> han impedido que este empleado sea registrado correctamente:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre ,:class => 'form-control' ,:placeholder=>'Ingresar nombre'%>
  </div>
  <div class="field form-group">
    <%= f.label :apellido %><br>
    <%= f.text_field :apellido ,:class => 'form-control',:placeholder=>'Ingresar apellido' %>
  </div>
  <div class="field form-group">
    <%= f.label :dni %><br>
    <%= f.text_field :dni ,:class => 'form-control' ,:placeholder=>'Ingresar dni'%>
  </div>
  <div class="field form-group">
    <%= f.label :fecnac %><br>
    <%= f.date_select :fecnac, { :start_year => 1960, :end_year => 2015 , :use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre']} ,:class => 'date datetest'%>
  </div>
  <div class="field form-group">
    <% sexo={
      'Masculino'=> 'M',
      'Femenino'=> 'F',} %>
    <%= f.label :sexo %><br>
    <%= f.select :sexo,sexo ,:class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :telefono %><br>
    <%= f.text_field :telefono ,:class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :celular %><br>
    <%= f.text_field :celular ,:class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :direccion %><br>
    <%= f.text_area :direccion ,:class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email ,:class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :fecingreso %><br>
    <%= f.date_select :fecingreso, { :start_year => 2000, :end_year => 2015, :use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre'] } ,:class => 'date datetest' %>
  </div>
  <div class="field form-group">
    <% estado={
      'Activo'=> 'A',
      'Inactivo'=> 'I',} %>
    <%= f.label :estado %><br>
    <%= f.select :estado,estado ,:class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :codCOP %><br>
    <%= f.text_field :codCOP ,:class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :position_id %><br>
    <%= f.collection_select :position_id ,Position.all,:id,:sueldo,:class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :user_id %><br>
    <%= f.collection_select :user_id ,User.all,:id,:email,:class => 'form-control' , :include_blank => false %>
  </div>
  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit "Crear Empleado" ,:class => 'btn btn-primary'%>
  </div>
<% end %>
<br>
</div>
</div>
</div>