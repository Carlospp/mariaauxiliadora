<h2 class="col-md-offset-5">Editar Usuario</h2>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true ,:class => 'form-control'%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :contrase単a %> <i>(dejar en blanco si no desea cambiarlo)</i><br />
    <%= f.password_field :password, autocomplete: "off" ,:class => 'form-control'%>
  </div>

  <div class="field form-group">
    <%= f.label :confirmar_contrase単a %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,:class => 'form-control'%>
  </div>

  <div class="field form-group">
    <%= f.label :contrase単a_actual %> <i>(necesitamos su contrase単a actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off",:class => 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar",:class => 'btn btn-primary' %>
  </div>
<% end %>

<h3>Eliminar cuenta</h3>

<p> <%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "esta seguro?" }, method: :delete,:class => 'btn btn-danger'  %></p>

<%= link_to "Atras", :back %>
</div>
</div>
</div>
