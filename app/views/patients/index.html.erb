<p id="notice"><%= notice %></p>

<h2 class="col-md-offset-5 text-primary">Lista de Pacientes</h2>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
<table class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Dni</th>
      <th>Sexo</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Direccion</th>
      <th>Email</th>
      <th>Fecha Ingreso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.nombre %></td>
        <td><%= patient.apellido %></td>
        <td><%= patient.dni %></td>
        <td><%= patient.sexo %></td>
        <td><%= patient.telefono %></td>
        <td><%= patient.celular %></td>
        <td><%= patient.direccion %></td>
        <td><%= mail_to patient.email %></td>
        <td><%= patient.fecingreso %></td>
        <td><%= link_to 'Mostrar', patient %></td>
        <% if can? :update, patient %>
          <td>
            <%= link_to 'Editar', edit_patient_path(patient) %>
          </td><% end %>
          <% if can? :destroy, patient %>
          <td>
            <%= link_to 'Eliminar', patient, method: :delete, data: { confirm: 'Esta seguro?' } %>
          </td><% end %>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
  </div>
<%= link_to 'Nuevo Paciente', new_patient_path ,:class =>'btn btn-primary'%>
<%= link_to "Exportar a Excel", patients_path(format: "xls"),:class =>'btn btn-success' %>
<%= link_to "Exportar a CSV", patients_path(format: "csv"),:class =>'btn btn-success' %>
</div>